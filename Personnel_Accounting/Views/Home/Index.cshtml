@model List<Employee>

<h1>Employee List</h1>
﻿<div class="card shadow border-0" style="margin-bottom: 60px">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="rox">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Employee List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 ">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Home" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Employee
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Birth Year</th>
                    <th>Education</th>
                    <th>Position</th>
                    <th>Salaty</th>
                    <th>Department</th>
                    <th>Supervisor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.LastName</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.MiddleName</td>
                        <td>@employee.BirthYear</td>
                        <td>@employee.Education</td>
                        <td>@employee.Position</td>
                        <td>@employee.Salaty</td>
                        <td>@employee.Department?.Name</td>
                        <td>@employee.Supervisor?.Id</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-action="Upsert" asp-route-id="@employee.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>